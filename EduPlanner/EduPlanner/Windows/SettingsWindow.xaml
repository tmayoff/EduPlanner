<Window x:Class="EduPlanner.Windows.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduPlanner.Windows"
        mc:Ignorable="d"
        Title="Settings" Height="450" Width="350">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <TextBlock VerticalAlignment="Center" FontSize="16">Check for Updates on Startup</TextBlock>
        <ToggleButton IsChecked="true" VerticalAlignment="Center" HorizontalAlignment="Right" Name="tgCheckForUpdatesOnStartup" Checked="tgCheckForUpdatesOnStartup_Checked" Unchecked="tgCheckForUpdatesOnStartup_Unchecked"></ToggleButton>
        <TextBlock VerticalAlignment="Center" Grid.Row="1" FontSize="16">Minimize to Tray</TextBlock>
        <ToggleButton IsChecked="true" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Row="1" Name="tgMinimizeToTray" Unchecked="tgMinimizeToTray_Unchecked" Checked="tgMinimizeToTray_Checked"></ToggleButton>
    </Grid>
</Window>
