<UserControl x:Class="EduPlanner.HomeworkCard"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:EduPlanner"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <Grid Margin="2">
        <md:Card Padding="5" md:ShadowAssist.ShadowDepth="Depth1">
            <StackPanel>
                <TextBlock Name="txtDueDate" Text="Due Date" Margin="0 0 0 5"/>
                <Button Content="{Binding Path=HomeworkTitle}" Click="EditHomework_Click"/>
            </StackPanel>
        </md:Card>
    </Grid>
</UserControl>
