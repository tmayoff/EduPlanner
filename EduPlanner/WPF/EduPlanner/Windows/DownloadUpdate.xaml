<Window x:Class="EduPlanner.DownloadUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EduPlanner"
        mc:Ignorable="d" ResizeMode="NoResize"
        Title="Application Name Updater" Height="250" Width="650">
    <StackPanel Margin="15">
        <TextBlock Margin="10" FontSize="16" HorizontalAlignment="center">EduPlanner is downloading an update... Please wait.</TextBlock>
        <ProgressBar  Name="pbDownload" Width="620" Height="20" Margin="40" HorizontalAlignment="Center"/>

    </StackPanel>
</Window>
